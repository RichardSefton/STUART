{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AVR Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.hex",
            "miDebuggerPath": "/usr/bin/avr-gdb",
            "setupCommands": [
                {
                    "text": "target remote localhost:1234"
                },
                {
                    "text": "load"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "cwd": "${workspaceFolder}",
            // "preLaunchTask": "build"
        }
    ]
}
